@page
@model KeelepuristMain.AdminTestGlossaryModel
@{
    ViewData["Title"] = "Kontrolltööde Haldus";
}

<h1>Kontrolltööde haldus</h1>

<a class="btn btn-primary" asp-page="./AdminTestEditor">
    <i class="material-icons" style="font-size:1em">add</i>  Loo uus kontrolltöö
</a>

<ul class="file-system">
    @foreach (var path in Model.TestExercises)
    {
        <li>
            <a class="btn btn-link btn-small" asp-page="./AdminTestEditor" asp-route-blobName="@path">
                @path
            </a>
        </li>
    }
</ul>

<a class="btn btn-light" asp-page="./AdminIndex">
    <i class="material-icons" style="font-size:1em">arrow_back</i>  Tagasi haldusesilehele
</a>