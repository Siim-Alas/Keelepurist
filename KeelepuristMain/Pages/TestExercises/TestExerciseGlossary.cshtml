@page
@model KeelepuristMain.TestExerciseGlossaryModel
@{
    ViewData["Title"] = "Kontrolltööd";
}

<h1>Kontrolltööd</h1>

<p class="text-danger">Kontrolltööde õigesti saatmiseks peab teie veebibrauseri lubama JavaScripti</p>

<ul class="file-system">
    @foreach (var testPath in Model.BlobPaths)
    {
        <li>
            <a asp-route-testPath="@testPath" asp-page="/TestExercises/TestFillInBlanks">
                @testPath.Substring(testPath.LastIndexOf("/"))
            </a>
        </li>
    }
</ul>