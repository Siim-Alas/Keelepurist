@page
@model KeelepuristMain.EtteytlusModel
@{
    ViewData["Title"] = "etteytlus";

}

<h1>etteytlus</h1>

<audio autoplay>
    <source src="~/StaticContent/soundpack/@Model.WavFileString" type="audio/wav" />
</audio>

<div>
    <label>Sõna: </label>
    <input id="0"
           name='@string.Join("|", Model.BlankSpace.CorrectAnswers)'
           type="text"
           onclick="resetBlankSpace(0)" />
    <button type="button" class="btn btn-primary" onclick="checkAnswers()">Esita</button>
</div>

<a class="btn btn-info" asp-page="./Etteytlus">Uus sõna</a>

@section Scripts
{
    <script type="text/javascript" src="~/js/site.js"></script>
}